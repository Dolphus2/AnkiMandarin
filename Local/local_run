import os
from anki_mandarin import run_model


if __name__ == "__main__":
    print(f"Current working directory: {os.getcwd()}")
    
    # Define input and output paths
    base_dir = os.getcwd()
    input_csv = os.path.join(base_dir, 'data', 'NanDa', 'ZongHe', 'Week3.csv')
    output_file = os.path.join(base_dir, 'Output', 'mandarin_flashcards.apkg')
    cedict_file_path = os.path.join(base_dir, 'Dictionary', 'cedict_ts.u8')

    # Run the main function with parsed arguments
    run_model(input_csv, output_file, cedict_file_path)